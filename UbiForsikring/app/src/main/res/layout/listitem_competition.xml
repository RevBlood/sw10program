<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/ListViewTopSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CompetitionRankView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:textSize="44sp"/>

        <Button
            android:id="@+id/EnterCompetitionButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="@string/EnterCompetitionText"
            />

        <TextView
            android:id="@+id/CompetitionTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/CompetitionRankView"
            android:layout_toLeftOf="@id/CompetitionRankView"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/CompetitionDescriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/CompetitionTitleView"
            android:layout_toStartOf="@id/CompetitionRankView"
            android:layout_toLeftOf="@id/CompetitionRankView"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ListViewTopSection">

        <TextView
            android:id="@+id/CompetitionTimeLeftView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/CompetitionAttemptCountView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:visibility="invisible"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>