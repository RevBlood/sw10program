<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/ListViewTopSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TripOptimalityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="@string/DefaultText"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/TripTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/TripOptimalityView"
            android:text="@string/DefaultText"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/TripDescriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/TripTitleView"
            android:layout_toStartOf="@id/TripOptimalityView"
            android:text="@string/DefaultText"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ListViewTopSection"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/TripTimeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/DefaultText" />

        <TextView
            android:id="@+id/TripDistanceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/DefaultText" />

        <TextView
            android:id="@+id/TripCostView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/DefaultText" />

    </LinearLayout>

</RelativeLayout>