<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ListViewTopSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/DelinquencyOptimality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/DefaultText"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/DelinquencyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/DelinquencyOptimality"
            android:layout_toLeftOf="@id/DelinquencyOptimality"
            android:text="@string/DefaultText"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/DelinquencyDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/DelinquencyTitle"
            android:layout_toStartOf="@id/DelinquencyOptimality"
            android:layout_toLeftOf="@id/DelinquencyOptimality"
            android:text="@string/DefaultText"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ListViewTopSection"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/DelinquenciesPerHundred"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/DefaultText" />

        <!-- <TextView
            android:id="@+id/DelinquencyCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/DefaultText" /> -->

    </LinearLayout>

</RelativeLayout>